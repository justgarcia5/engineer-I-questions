<!DOCTYPE html>
<html>
  <head>
    <title>ContactListApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Cabin+Sketch&display=swap" rel="stylesheet">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <div class="navbar">
    <% if user_signed_in? %>
      <%= form_tag(search_page_path, method: :get, class: "input-group") do %>
        <%= link_to "#{current_user.name}'s Contacts", contacts_path, class: "navbar-link" %>
        <%= link_to "Add contact", new_contact_path, class: "navbar-link" %>
        <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
        <%= search_field_tag :search, params[:search], placeholder: " Search contacts", class: "search-input" %>
        <%= button_tag "Search", :name => nil, class: "search-button" %>
      <% end %>
    <% else %>
      <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %>
      <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
    <% end %>
    </div>
    <hr class="navbar-hr"/>

  <body>

  <%= yield %>

  </body>
</html>
