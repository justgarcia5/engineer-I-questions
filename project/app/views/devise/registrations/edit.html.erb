<div class="errors-div">
  <%= render "devise/shared/error_messages", resource: resource %>
</div>

<div class="login-container">
  <div class="form-container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <h2 class="login-title">Edit <%= resource_name.to_s.humanize %></h2>
      <hr class="login-hr"></hr>


      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-small" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "input-small" %>
        <% if @minimum_password_length %>
          <br />
          <em class="user-edit-field"><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-small" %>
      </div>

      <div class="field">
        <%= f.label :current_password %> <i class="user-edit-field">*</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "input-small" %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: "btn-primary" %>
      </div>
    <% end %>

    <div class="actions">
      <%= button_to "Delete", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn-secondary" %>
    </div>

    <div class="additional-links" >
      <%= link_to "Back", :back %>
    </div>
  </div>
</div>
