<%= render "devise/shared/error_messages", resource: resource %>

<div class="login-container">
  <div class="form-container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h2 class="login-title">Sign up</h2>
      <hr class="login-hr"></hr>

      <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "email", class: "input-small" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-small" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em class="user-edit-field">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "input-small" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-small" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn-primary" %>
      </div>
    <% end %>
    <div class="additional-links" >
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
